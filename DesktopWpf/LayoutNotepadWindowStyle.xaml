<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style TargetType="Button">
        <Setter Property="Background" Value="DarkGray" />
    </Style>
    <Style x:Key="MenuButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Width" Value="100" />
        <Setter Property="Height" Value="40" />
    </Style>
    <Style x:Key="ShortcutButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Width" Value="40" />
        <Setter Property="Height" Value="40" />
    </Style>
    <Style x:Key="LineButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Width" Value="40" />
        <Setter Property="Height" Value="20" />
    </Style>
</ResourceDictionary>