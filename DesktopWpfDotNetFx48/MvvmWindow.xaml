<Window x:Class="DesktopWpf.MvvmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopWpf"
        mc:Ignorable="d"
        Title="MvvmWindow" Height="300" Width="450">
    <Grid>
        <StackPanel>
            <Label Content="{Binding MyLabel}" />
            <Button Content="测试" Command="{Binding MyButtonCommand}" CommandParameter="hello wpf" />
        </StackPanel>
    </Grid>
</Window>
